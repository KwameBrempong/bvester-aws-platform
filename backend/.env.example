# BVESTER PLATFORM - ENVIRONMENT CONFIGURATION
# Copy this file to .env and fill in your actual values

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# Firebase Admin SDK (for server-side operations)
FIREBASE_ADMIN_TYPE=service_account
FIREBASE_ADMIN_PROJECT_ID=your_firebase_project_id
FIREBASE_ADMIN_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project_id.iam.gserviceaccount.com
FIREBASE_ADMIN_CLIENT_ID=your_client_id
FIREBASE_ADMIN_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_ADMIN_TOKEN_URI=https://oauth2.googleapis.com/token

# ============================================================================
# PAYMENT INTEGRATIONS
# ============================================================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Flutterwave Configuration (African Payments)
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_public_key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_secret_key
FLUTTERWAVE_ENCRYPTION_KEY=FLWSECK_TESTyour_encryption_key

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ============================================================================
# AI & ANALYTICS INTEGRATIONS
# ============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_ORGANIZATION=org-your_organization_id

# Google Cloud AI
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_CLOUD_KEY_FILE=path/to/google-cloud-service-account.json

# ============================================================================
# COMMUNICATION SERVICES
# ============================================================================

# SendGrid Email Service
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@bvester.com
SENDGRID_FROM_NAME=Bvester Platform

# Twilio SMS Service
TWILIO_ACCOUNT_SID=ACyour_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Zoom API (for VR demos)
ZOOM_API_KEY=your_zoom_api_key
ZOOM_API_SECRET=your_zoom_api_secret

# ============================================================================
# STORAGE & CDN
# ============================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-2
AWS_S3_BUCKET=bvester-documents

# Cloudinary (Image/Video Processing)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================================================
# VERIFICATION & COMPLIANCE
# ============================================================================

# Onfido KYC Service
ONFIDO_API_TOKEN=test_your_onfido_api_token
ONFIDO_WEBHOOK_TOKEN=your_webhook_token

# DocuSign
DOCUSIGN_INTEGRATION_KEY=your_integration_key
DOCUSIGN_USER_ID=your_user_id
DOCUSIGN_ACCOUNT_ID=your_account_id
DOCUSIGN_PRIVATE_KEY=path/to/docusign-private.key

# ============================================================================
# EXTERNAL APIs
# ============================================================================

# Currency Exchange API
EXCHANGE_RATES_API_KEY=your_exchange_rates_api_key

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# IP Geolocation
IP_GEOLOCATION_API_KEY=your_ip_geolocation_api_key

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Security
JWT_SECRET=your_super_secret_jwt_key_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_key
SESSION_TIMEOUT=3600000

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://bizinvest-hub-prod.web.app
CORS_CREDENTIALS=true

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================

# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX-X

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# Sentry Error Tracking
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================

# Database URLs (for testing)
TEST_DATABASE_URL=your_test_database_url
DEV_DATABASE_URL=your_dev_database_url

# Email Testing (Mailtrap)
MAILTRAP_USERNAME=your_mailtrap_username
MAILTRAP_PASSWORD=your_mailtrap_password

# Debug Settings
DEBUG=bvester:*
LOG_LEVEL=debug

# ============================================================================
# AFRICAN MARKET SPECIFIC
# ============================================================================

# Mobile Money Integrations
MTN_MOMO_API_KEY=your_mtn_momo_api_key
AIRTEL_MONEY_API_KEY=your_airtel_money_api_key
MPESA_API_KEY=your_mpesa_api_key

# Local Payment Gateways
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# Regional Banking APIs
ACCESS_BANK_API_KEY=your_access_bank_api_key
STANDARD_BANK_API_KEY=your_standard_bank_api_key

# Compliance & Regulatory
AFRICAN_DEVELOPMENT_BANK_API=your_adb_api_key
REGULATORY_REPORTING_ENDPOINT=https://api.african-regulator.com

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================

# Production Firebase (set only in production)
# FIREBASE_API_KEY=prod_api_key
