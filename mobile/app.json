{
  "expo": {
    "name": "Bvester",
    "slug": "bvester",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#6366F1"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bvester.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Bvester needs camera access to scan QR codes and take profile photos.",
        "NSPhotoLibraryUsageDescription": "Bvester needs photo library access to select profile photos.",
        "NSLocationWhenInUseUsageDescription": "Bvester uses your location to show nearby investment opportunities.",
        "NSContactsUsageDescription": "Bvester needs contacts access to invite friends.",
        "NSCalendarsUsageDescription": "Bvester needs calendar access to schedule investment reminders.",
        "NSFaceIDUsageDescription": "Bvester uses Face ID for secure authentication.",
        "NSUserTrackingUsageDescription": "Bvester uses tracking to provide personalized investment recommendations."
      },
      "config": {
        "usesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6366F1"
      },
      "package": "com.bvester.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_CONTACTS",
        "READ_CALENDAR",
        "WRITE_CALENDAR",
        "USE_FINGERPRINT",
        "USE_BIOMETRIC",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-localization",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#6366F1",
          "sounds": [
            "./assets/sounds/notification.wav"
          ]
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Bvester to use Face ID for authentication."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Bvester to access your camera."
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Bvester to use your location."
        }
      ],
      [
        "expo-contacts",
        {
          "contactsPermission": "Allow Bvester to access your contacts."
        }
      ],
      "expo-sqlite",
      "expo-background-fetch",
      [
        "expo-task-manager",
        {
          "ios": {
            "minimumBackgroundFetchInterval": 900
          }
        }
      ]
    ],
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#6366F1",
      "androidMode": "default",
      "androidCollapsedTitle": "Bvester Updates"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/bvester"
    },
    "extra": {
      "eas": {
        "projectId": "bvester-mobile-app"
      },
      "apiUrl": "https://api.bvester.com",
      "websocketUrl": "wss://ws.bvester.com",
      "cdnUrl": "https://cdn.bvester.com",
      "supportEmail": "support@bvester.com",
      "privacyUrl": "https://bvester.com/privacy",
      "termsUrl": "https://bvester.com/terms"
    },
    "experiments": {
      "tsconfigPaths": true
    },
    "scheme": "bvester",
    "owner": "bvester-team"
  }
}