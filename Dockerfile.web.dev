# Development-optimized container with hot reload

FROM node:18-alpine AS development

# Install development tools
RUN apk add --no-cache \
    curl \
    git \
    bash \
    && npm install -g @expo/cli

# Create app user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S bvester-web -u 1001 -G nodejs

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm ci && npm cache clean --force

# Create necessary directories
RUN mkdir -p .expo logs && \
    chown -R bvester-web:nodejs /app

# Switch to non-root user
USER bvester-web

# Expose Expo development ports
EXPOSE 19000 19006

# Health check for development
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:19006 || exit 1

# Development environment variables
ENV NODE_ENV=development \
    EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0 \
    REACT_NATIVE_PACKAGER_HOSTNAME=0.0.0.0

# Start Expo development server
CMD ["npx", "expo", "start", "--web", "--host", "0.0.0.0"]